<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ConnectActivity$PlaceholderFragment">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/connectButton"
        android:enabled="true"
        android:onClick="connectButtonClick"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forwardButton"
        android:src="@drawable/forward1"
        android:visibility="visible"
        android:clickable="true"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/backwardButton"
        android:layout_alignStart="@+id/backwardButton"
        android:focusable="false" />

    <ImageButton
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backwardButton"
        android:src="@drawable/backward1"
        android:visibility="visible"
        android:layout_below="@+id/forwardButton"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/turnLeftButton"
        android:visibility="visible"
        android:src="@drawable/turn_left1"
        android:layout_alignBottom="@+id/backwardButton"
        android:layout_toRightOf="@+id/backwardButton"
        android:layout_toEndOf="@+id/backwardButton" />

    <ImageButton
        android:clickable="true"
        android:layout_width="wrap_content"
        android:visibility="visible"
        android:layout_height="wrap_content"
        android:id="@+id/turnRightButton"
        android:src="@drawable/turn_right1"
        android:layout_alignBottom="@+id/backwardButton"
        android:layout_toLeftOf="@+id/backwardButton"
        android:layout_toStartOf="@+id/backwardButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aboutText"
        android:layout_alignParentBottom="true"
        android:text="Controller made by Shtiliyan Uzunov, FMI at Sofia University Â©"
        android:layout_alignRight="@+id/connectButton"
        android:layout_alignEnd="@+id/connectButton"
        android:enabled="false"
        android:textAlignment="gravity"
        android:editable="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/distanceText"
        android:text="Distance ahead : N/A"
        android:layout_below="@+id/connectButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
